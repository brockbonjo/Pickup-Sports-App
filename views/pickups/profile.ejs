<h2 class="profileWelcome">Welcome, <%=player.name%></h2>
<img src="<%= player.avatar %>" alt="">


<div class="help">
  <h4>Your next pickup is:</h4>
  <div class="profileDetails">

    <div class="leftShow">
      <div class="comments">
        Host Comments: <%= /*pickup.hostComments*/ %>
      </div>
      <div class="timestampShow">
         Game Started: <%= /*pickup.createdAt*/ %>
      </div>
      <div class="numPlayersShow">
        <%= /*pickup.numOriginalPlayers + pickup.rsvp.length*/ %>
      </div>

    </div>
    <div class="rightShow">
      <div class="showMap">
        <%= /*pickup.location*/ %>
      </div>
      <div class="directions">
        Directions
      </div>
    </div>

  </div>
</div>




  <h4>Your past pickups: </h4>
  <table>
    <thead>
    <th>Sport</th>
    <th>Location</th>
    <th>Date</th>
    </thead>
    <tbody>
      <% player.pastGames.forEach(function (p) { %>
      <tr>
        <td> <%= p.sport %> </td>
        <td> <%= p.location %> </td>
        <td> <%= p.date%> </td>
      </tr>
    <% }); %>
    </tbody>
  </table>
</main>

